<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/behaviors_positive"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:divider="@color/cardview_shadow_end_color"
        app:layout_constraintBottom_toTopOf="@id/behaviors_neutral"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ListView>

    <ListView
        android:id="@+id/behaviors_neutral"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:divider="@color/cardview_shadow_end_color"
        app:layout_constraintBottom_toTopOf="@id/behaviors_negative"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/behaviors_positive" />

    <ListView
        android:id="@+id/behaviors_negative"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:divider="@color/cardview_shadow_end_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>